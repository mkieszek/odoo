<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record model='ir.ui.view' id='hr_timesheet_import_view'>
			<field name="name">hr.timesheet.import.view</field>
            <field name="model">hr.timesheet.import</field>
            <field name="arch" type="xml">
				<form string="Import kart pracy" version="7.0">
					<sheet>
						<group>
							<field name="file_import"/>
						</group>
					</sheet>
					<footer>
                        <button name="timesheet_import" string="Import" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
		
		<record id="action_hr_timesheet_import" model="ir.actions.act_window">
            <field name="name">Import kart pracy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.timesheet.import</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_timesheet_import_view"/>
            <field name="target">new</field>
        </record>
		<menuitem
             name="Import kart pracy"
             action="action_hr_timesheet_import"
             id="menu_hr_timesheet_import"
             parent="base.menu_config"/>
	</data>
</openerp>
