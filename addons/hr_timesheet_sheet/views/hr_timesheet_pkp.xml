                    <field name="kierowca" widget="float_time" sum="Suma normalnych"/>
                    <field name="budowa" widget="float_time" sum="Suma budowa" />
                    <field name="niebezpieczne" widget="float_time" sum="Suma normalnych"/>
                    <field name="nadplacone" widget="float_time" sum="Suma normalnych"/>
                </field>
